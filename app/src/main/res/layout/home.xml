<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yada.fact.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <android.support.v7.widget.CardView
        android:layout_width="364dp"
        android:layout_height="46dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:text="Meals:"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="373dp"
        tools:text="A healthy outside starts from the inside" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_meal_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add_white_24dp"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="403dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="52dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="365dp"
        android:layout_height="107dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="76dp">

        <TextView
            android:layout_width="324dp"
            android:layout_height="64dp"
            android:text="Recommended Meal:"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="364dp"
        android:layout_height="46dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="200dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:text="Water:"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="364dp"
        android:layout_height="46dp"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="258dp">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="239dp"
        android:layout_height="42dp"
        android:text="Before and after:"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 glasses left"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="213dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories left"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="45dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACT's Recommendations"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="125dp" />

</android.support.constraint.ConstraintLayout>
